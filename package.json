{
	"name": "solid-relay",
	"type": "module",
	"version": "1.0.0-beta.16",
	"description": "SolidJS bindings for Relay",
	"author": "XiNiHa <me@xiniha.dev>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/XiNiHa/solid-relay.git"
	},
	"homepage": "https://solid-relay.xiniha.dev",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			},
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			}
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsdown",
		"check": "biome check && tsc --noEmit",
		"fix": "biome check --fix",
		"test": "concurrently \"vitest --watch --ui --coverage\" \"(cd tests && relay-compiler -w)\"",
		"ci:test": "(cd tests && relay-compiler) && vitest run --coverage",
		"ci:version": "changeset version && biome check --fix",
		"ci:publish": "pnpm publish -r"
	},
	"dependencies": {
		"dequal": "^2.0.3",
		"tiny-invariant": "^1.3.3"
	},
	"peerDependencies": {
		"relay-runtime": "^18.1.0 || ^19 || ^20",
		"seroval": "^1.1.0",
		"solid-js": ">=1.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@changesets/cli": "^2.29.8",
		"@solidjs/testing-library": "^0.8.10",
		"@testing-library/jest-dom": "^6.9.1",
		"@types/node": "^24.10.14",
		"@types/relay-runtime": "^20.1.1",
		"@types/relay-test-utils": "^19.0.0",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"concurrently": "^9.2.1",
		"happy-dom": "^20.7.0",
		"magic-string": "^0.30.21",
		"minimatch": "^10.2.4",
		"oxc-parser": "^0.115.0",
		"oxc-walker": "^0.7.0",
		"pkg-pr-new": "^0.0.63",
		"publint": "^0.3.17",
		"relay-compiler": "^20.1.1",
		"relay-runtime": "^20.1.1",
		"relay-test-utils": "^20.1.1",
		"solid-js": "^1.9.11",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vite-plugin-relay-lite": "^0.12.0",
		"vite-plugin-solid": "^2.11.10",
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"patchedDependencies": {
			"@changesets/assemble-release-plan": "patches/@changesets__assemble-release-plan.patch"
		}
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"packageManager": "pnpm@10.30.2"
}
