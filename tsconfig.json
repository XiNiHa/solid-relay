{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"outDir": "dist",
		"baseUrl": ".",
		"declaration": true,
		"isolatedModules": true,
		"isolatedDeclarations": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": ["src/**/*"],
	"references": [{ "path": "./tsconfig.test.json" }]
}
