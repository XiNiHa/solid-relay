{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useTemplate": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!**/.changeset",
			"!**/__generated__",
			"!**/*.graphql",
			"!**/.vinxi",
			"!**/.output",
			"!**/doc_build",
			"!**/docs/api",
			"!**/coverage"
		]
	}
}
